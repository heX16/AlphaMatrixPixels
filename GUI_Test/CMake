CXXFLAGS= -std=gnu++0x
LIBS=-lSDL2main -lSDL2
WINLIBS=-lgdi32 -lsetupapi -lwinmm -limm32 -lole32 -loleaut32 -lversion
LINLIBS=-ldl -lrt

all:
	@echo "run \"make linux\" or \"make windows\""

windows:
	$(CXX) imp.cpp ${CXXFLAGS} -I${WINLIBSPATH}/include -L${WINLIBSPATH}/build/.libs/ -lmingw32 ${LIBS} ${WINLIBS}

linux:
	$(CXX) imp.cpp ${CXXFLAGS} -I${LINLIBSPATH}/include -L${LINLIBSPATH}/build/.libs/ ${LIBS} ${LINLIBS}
