{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build GUI_Test (Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd dev/GUI_Test && meson setup builddir --buildtype=debug && meson compile -C builddir"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build GUI_Test (Release)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd dev/GUI_Test && meson setup builddir --buildtype=release && meson compile -C builddir && ./builddir/HXLED_GUI_Test.exe"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build GUI_Test (Fast - compile only)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd dev/GUI_Test && meson compile -C builddir && ./builddir/HXLED_GUI_Test.exe"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "rm -rf dev/GUI_Test/builddir"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}

