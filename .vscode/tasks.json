{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build GUI_Test (Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "meson setup --reconfigure builddir --buildtype=debug && meson compile -C builddir"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build GUI_Test (Release)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "meson setup --reconfigure builddir --buildtype=release && meson compile -C builddir"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "builddir"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}

